@model AirMiles.FrontEnd.Models.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="login-content">
    <!-- Login -->
    <div class="nk-block toggled">
        <form method="post" class="nk-form" id="form">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="input-group">
                <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-support"></i></span>
                <div class="nk-int-st">
                    <input type="text" class="form-control" placeholder="Username" asp-for="Username">
                </div>
            </div>
            <span asp-validation-for="Username" class="text-danger"></span>
            <div class="input-group mg-t-15">
                <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-edit"></i></span>
                <div class="nk-int-st">
                    <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                </div>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="fm-checkbox">
                <label><input type="checkbox" class="i-checks" asp-for="RememberMe"> <i></i> Keep me signed in</label>
            </div>

            <a href="javascript:$('#form').submit();" class="btn btn-login btn-success btn-float"><i class="notika-icon notika-right-arrow"></i></a>
        </form>

            <div class="nk-navigation nk-lg-ic">
                <a asp-action="Register" asp-controller="Account" data-ma-action="nk-login-switch" data-ma-block="#l-register"><i class="notika-icon notika-plus-symbol"></i> <span>Register</span></a>
                <a asp-action="ForgotPassword" asp-controller="Account" data-ma-block="#l-forget-password"><i>?</i> <span>Forgot Password</span></a>
            </div>
    </div>
</div>
